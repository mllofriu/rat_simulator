<?xml version="1.0" encoding="us-ascii"?>
<!-- los inicios de los HAs, inicio TestA opuesto a la plataforma, cambiar la posicion de la comida -->

<simulation>
	<!--Definicion de localidades de partida del robot-->
	<point name='W' xp='-0.4' yp='0' zp='0' rot='0'/>
	<point name='N' xp='0' yp='0' zp='-0.4' rot='0'/>
	<point name='E' xp='0.4' yp='0' zp='0' rot='0'/>
	<point name='S' xp='0' yp='0' zp='0.4' rot='0'/>

	<!--Definicion de localidades de la plataforma oculta (meta)-->
	<point name='SE' xp='0.2' yp='0' zp='0.2' rot='0'/>
	<point name='SW' xp='-0.2' yp='0' zp='0.2' rot='0'/>
	<point name='NE' xp='0.2' yp='0' zp='-0.2' rot='0'/>
	<point name='NW' xp='-0.2' yp='0' zp='-0.2' rot='0'/>

	<!--Definicion de etapas de la simulacion-->
	<!--Dos preentrenamientos de 180 segundos arrancando de los puntos mas alejados-->
	<trial type='habituation' name ='HA1' pointName='N' reps='1' time='180'/>
	<trial type='habituation' name ='HA2' pointName='W' reps='1' time='180'/>

	<!--Dia 3 - Ocho entrenamientos -->
	<trial type='training' exploration='0.2' name ='Dia3LL' pointName='N' reps='1' time='0'/>
	<trial type='training' exploration='0.2' name ='Dia3RR' pointName='W' reps='1' time='0'/>
	<trial type='training' exploration='0.2' name ='Dia3LL' pointName='N' reps='1' time='0'/>
	<trial type='training' exploration='0.2' name ='Dia3RR' pointName='W' reps='1' time='0'/>
	<trial type='training' exploration='0.2' name ='Dia3L' pointName='E' reps='1' time='0'/>
	<trial type='training' exploration='0.2' name ='Dia3R' pointName='S' reps='1' time='0'/>
	<trial type='training' exploration='0.2' name ='Dia3L' pointName='E' reps='1' time='0'/>
	<trial type='training' exploration='0.2' name ='Dia3R' pointName='S' reps='1' time='0'/>

	<!--Dia 4 - Ocho entrenamientos - cambio secuencia -->
	<trial type='training' exploration='0.3' name ='Dia4RR' pointName='W' reps='1' time='0'/>
	<trial type='training' exploration='0.3' name ='Dia4LL' pointName='N' reps='1' time='0'/>
	<trial type='training' exploration='0.3' name ='Dia4RR' pointName='W' reps='1' time='0'/>
	<trial type='training' exploration='0.3' name ='Dia4LL' pointName='N' reps='1' time='0'/>
	<trial type='training' exploration='0.5' name ='Dia4R' pointName='S' reps='1' time='0'/>
	<trial type='training' exploration='0.5' name ='Dia4L' pointName='E' reps='1' time='0'/>
	<trial type='training' exploration='0.5' name ='Dia4R' pointName='S' reps='1' time='0'/>
	<trial type='training' exploration='0.5' name ='Dia4L' pointName='E' reps='1' time='0'/>

	<!--Dia 5 - VER si esto es asi -->
	<trial type='training' exploration='0.8' name ='Dia5LL' pointName='N' reps='1' time='0'/>
	<trial type='training' exploration='0.8' name ='Dia5RR' pointName='W' reps='1' time='0'/>
	<trial type='training' exploration='0.8' name ='Dia5L' pointName='E' reps='1' time='0'/>
	<trial type='training' exploration='0.8' name ='Dia5R' pointName='S' reps='1' time='0'/>

	<!--Dia 5 - Test A -->
	<!--No poner type en habituation porque si no no usa EPS -->
	<trial type='testing' exploration='0.8' name ='TestALL' pointName='NW' reps='1' time='60'/>
	<!--Elimina la comida al comienzo del TestA -->
	<operation name = 'remove' primitive = 'food' trial = 'TestALL'/>

	<!--Muevo la comida al principio -->
	<operation name = 'move' primitive = 'food' trial = 'HA1' pointName = 'SE'/>


</simulation>