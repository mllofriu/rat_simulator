<?xml version="1.0" encoding="us-ascii"?>
<!-- Just a test of new format -->

<experiment>
	<!--Robot startin points -->
	<point>
		<name>S</name>
		<xp>.5</xp>
		<yp>0</yp>
		<zp>.5</zp>
		<rot>0</rot>
	</point>
	
	
	<maze>/edu/usf/ratsim/experiment/mazes/taxiNoWalls.xml</maze>
	
	<!--Subject groups -->
	<group>
		<name>oneLayer</name>
		<numMembers>100</numMembers>
		<model>
			<name>MultiScaleMultiIntentionCooperativeModel</name>
			<params>
				<numPCLayers>5</numPCLayers>
				<numPCCellsPerLayer>1000</numPCCellsPerLayer>
				<minRadius>.05</minRadius>
				<!-- .05 m of ".2 radius" -->
				<maxRadius>.2</maxRadius>
				<!-- .25 m of ".2 radius" -->
				<numHDLayers>4</numHDLayers>
				<minHDCellsPerLayer>1</minHDCellsPerLayer>
				<stepHDCellsPerLayer>4</stepHDCellsPerLayer>
				<numIntentions>4</numIntentions>
				<deterministicActionSelection>true</deterministicActionSelection>
				<foodReward>10000</foodReward>
				<nonFoodReward>0</nonFoodReward>
				<discountFactor>1</discountFactor>
				<alpha>.8</alpha>
				<initialValue>0</initialValue>
				<flashingReward>10000</flashingReward>
				<nonFlashingReward>10000</nonFlashingReward>
				<wallAvoidingVal>0</wallAvoidingVal>
				<proportionalQL>true</proportionalQL>
			</params>
		</model>
		<initializers>
			<initializer>
				<name>feederSelector</name>
				<params>
					<numFeeders>4</numFeeders>
				</params>
			</initializer>
		</initializers>
	</group>
	
	<trial>
		<name>training</name>
		<reps>100</reps>
		<groups>
			<group>oneLayer</group>
		</groups>
		<initialTasks>
			<task>
				<name>PlaceRobotInitiallyTask</name>
				<params>
					<initialPosition>S</initialPosition>
				</params>
			</task>
			 <task>
                <name>ResetModelTask</name>
                <params>
                </params>
            </task>
			<task>
				<name>DeactivateAllFeeders</name>
				<params></params>
			</task>
			<task>
				<name>ActivateRandomFeeder</name>
				<params>
				</params>
			</task>
			
		</initialTasks>
		<afterCycleTasks>
			
			<task>
				<name>GiveFood</name>
			</task>
			<task>
				<name>ResetRobotAte</name>
			</task>
			
			<!-- <task> <name>UnflashFeeder</name> </task> -->
		</afterCycleTasks>
		<afterTrialTasks>
		</afterTrialTasks>
		<stopConditions>
			<stopCondition>
				<name>FoundNFood</name>
				<params>
					<n>1</n>
				</params>
			</stopCondition>
		</stopConditions>
		<afterCycleLoggers>
			<logger>
				<name>PositionLogger</name>
			</logger>
			<logger>
				<name>WantedFeederLogger</name>
			</logger>
			
			
		</afterCycleLoggers>
		<afterTrialLoggers>
			<!-- <logger> <name>PolicyDumperWithIntention</name> <params> <numIntentions>8</numIntentions>
				</params> </logger> -->
			<logger>
				<name>WallLogger</name>
			</logger>
		</afterTrialLoggers>
		<plotters>
		</plotters>
	</trial>
	
	<!-- 4 testing trials -->
	<postproc>
		<name>toRData</name>
		<params></params>
	</postproc>
	<postproc>
		<name>moveLogs</name>
		<params></params>
	</postproc>

	
</experiment>
