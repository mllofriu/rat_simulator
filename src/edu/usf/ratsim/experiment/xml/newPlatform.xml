<?xml version="1.0" encoding="us-ascii"?>
<!-- Just a test of new format -->

<experiment>
	<universe>
		<name>edu.usf.ratsim.experiment.universe.virtual.VirtUniverse</name>
		<params>
			<closeToFoodThrs>0.2</closeToFoodThrs>
			<maze>src/edu/usf/ratsim/experiment/mazes/newPlatform.xml</maze>
			<display>true</display>
		</params>
	</universe>
	
	<robot>
		<name>edu.usf.ratsim.robot.virtual.VirtualRobot</name>
		<params>
			<noise>.2</noise>
			<lookaheadSteps>3</lookaheadSteps>
			<halfFieldOfView>3.15</halfFieldOfView>
			<visionDist>4.5</visionDist>
			<closeThrs>.2</closeThrs>
		</params>
	</robot>
	
	<group>
		<name>A</name>
		<numMembers>1</numMembers>
		<subject>
			<name>edu.usf.ratsim.experiment.subject.MultiScaleArtificialPCSubject</name>
			<params>
				<step>.1</step>
				<leftAngle>0.39</leftAngle>
				<rightAngle>-0.39</rightAngle>
				<numPCLayers>3</numPCLayers>
				<numPCCellsPerLayer>100</numPCCellsPerLayer>
				<minRadius>.05</minRadius>
				<maxRadius>.3</maxRadius>
				<placeCells>exponential</placeCells>
				<numHDLayers>4</numHDLayers>
				<minHDCellsPerLayer>1</minHDCellsPerLayer>
				<stepHDCellsPerLayer>4</stepHDCellsPerLayer>
				<numIntentions>1</numIntentions>
				<deterministicActionSelection>true</deterministicActionSelection>
				<foodReward>10000</foodReward>
				<nonFoodReward>0</nonFoodReward>
				<discountFactor>1</discountFactor>
				<alpha>0.1</alpha>
				<initialValue>0</initialValue>
				<flashingReward>10000</flashingReward>
				<nonFlashingReward>10000</nonFlashingReward>
				<wallAvoidingVal>0</wallAvoidingVal>
				<explorationHalfLifeVal>1</explorationHalfLifeVal>
				<proportionalQL>true</proportionalQL>
				<xmin>-1</xmin>
				<ymin>-1</ymin>
				<xmax>1</xmax>
				<ymax>1</ymax>
				<closeToFoodThrs>0.2</closeToFoodThrs>
			</params>
		</subject>
		<params></params>
		<tasks>
		</tasks>
	</group>
	
	<beforeTasks>
		<task>
			<name>edu.usf.experiment.task.DummyTask</name>
			<params>
				<text>Initial Experiment Task</text>
			</params>
		</task>
	</beforeTasks>
	
	<trial>
		<name>Training</name>
		<groups>
			<group>A</group>
			<group>B</group>
		</groups>
		<beforeTasks>
			<task>
				<name>edu.usf.experiment.task.DummyTask</name>
				<params>
					<text>Initial Trial Task</text>
				</params>
			</task>
		</beforeTasks>
		<episodes>
			<number>1</number>
			<beforeTasks>
				<task>
					<name>edu.usf.experiment.task.DummyTask</name>
					<params>
						<text>Initial Episode Task</text>
					</params>
				</task>
			</beforeTasks>
			<beforeCycleTasks>
				<task>
					<name>edu.usf.experiment.task.DummyTask</name>
					<params>
						<text>Before Cycle Task</text>
					</params>
				</task>
			</beforeCycleTasks>
			<afterCycleTasks>
				<task>
					<name>edu.usf.experiment.task.DummyTask</name>
					<params>
						<text>After Cycle Task</text>
					</params>
				</task>
			</afterCycleTasks>
			<loggers>
				<logger>
					<name>edu.usf.experiment.log.SubjectPositionLogger</name>
					<params></params>
				</logger>
			</loggers>
			<afterTasks>
				<task>
					<name>edu.usf.experiment.task.DummyTask</name>
					<params>
						<text>After Episode Task</text>
					</params>
				</task>
			</afterTasks>
			<stopConditions>
				<condition>
					<name>edu.usf.experiment.condition.MaxCycles</name>
					<params>
						<max>5000</max>
					</params>
				</condition>
			</stopConditions>
			<loggers>
				<logger>
					<name>edu.usf.experiment.log.DummyLogger</name>
				</logger>
			</loggers>
			<plotters>
				<plotter>
					<name>edu.usf.experiment.plot.DummyPlotter</name>
				</plotter>
			</plotters>
		</episodes>
		
		<afterTasks>
			<task>
				<name>edu.usf.experiment.task.DummyTask</name>
				<params>
				</params>
			</task>
		</afterTasks>
		<loggers>
			<logger>
				<name>edu.usf.experiment.log.DummyLogger</name>
			</logger>
		</loggers>
		<plotters>
			<plotter>
				<name>edu.usf.experiment.plot.DummyPlotter</name>
			</plotter>
		</plotters>
	</trial>
	
	<!-- 4 testing trials -->
	<afterTasks>
		<task>
			<name>edu.usf.experiment.task.DummyTask</name>
			<params>
				<text>After Experiment Task</text>
			</params>
		</task>
	</afterTasks>
	<loggers>
		<logger>
			<name>edu.usf.experiment.log.DummyLogger</name>
		</logger>
	</loggers>
	<plotters>
		<plotter>
			<name>edu.usf.experiment.plot.DummyPlotter</name>
		</plotter>
	</plotters>
</experiment>
