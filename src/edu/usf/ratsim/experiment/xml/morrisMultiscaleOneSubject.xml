<?xml version="1.0" encoding="us-ascii"?>
<!-- Just a test of new format -->

<experiment>
	<!--Robot startin points -->
	<point name='W' xp='-0.4' yp='0' zp='0' rot='0' />
	<point name='N' xp='0' yp='0' zp='-0.4' rot='0' />
	<point name='E' xp='0.4' yp='0' zp='0' rot='0' />
	<point name='S' xp='0' yp='0' zp='0.35' rot='0' />

	<!--Hidden platform points -->
	<point name='SE' xp='0.2' yp='0' zp='0.2' rot='0' />
	<point name='SW' xp='-0.2' yp='0' zp='0.2' rot='0' />
	<point name='NE' xp='0.2' yp='0' zp='-0.2' rot='0' />
	<point name='NW' xp='-0.2' yp='0' zp='-0.2' rot='0' />

    <maze>/edu/usf/ratsim/experiment/mazes/morrisCircularNoLandmarks.xml</maze>
    
	<!--Subjects -->
	<subject name='r1'>
		<model>
			<name>MSMModel</name>
			<params>
				<numLayers>5</numLayers>
				<minRadius>.05</minRadius>
				<maxRadius>.25</maxRadius>
			</params>
		</model>

	</subject>

	<!--Subject groups -->
	<group name='g1'>
		<member name='r1' />
	</group>

	<!--Experiment Trials -->
	<!-- 8 training trials -->
	<trial>
		<type>training</type>
		<name>tr</name>
		<reps>32</reps>
		<groups>
			<group>g1</group>
		</groups>
		<initialTasks>
			<task>
				<name>PlaceRobotInitiallyTask</name>
				<params>
					<initialPosition>S</initialPosition>
				</params>
			</task>
		</initialTasks>
		<afterCycleTasks>
		</afterCycleTasks>
		<afterTrialTasks>
			<task>
				<name>PolicyValueUpdater</name>
			</task>
		</afterTrialTasks>
		<stopConditions>
			<stopCondition>
				<name>Time</name>
				<params>
					<time>2000</time>
				</params>
			</stopCondition>
			<stopCondition>
				<name>FoundFood</name>
			</stopCondition>
		</stopConditions>
		<afterCycleLoggers>
			<logger>
				<name>PositionLogger</name>
			</logger>
		</afterCycleLoggers>
		<afterTrialLoggers>
			<logger>
				<name>PolicyDumper</name>
			</logger>
		</afterTrialLoggers>
	</trial>
	<!-- 4 testing trials -->
	<trial>
		<type>testing</type>
		<name>te</name>
		<start>S</start>
		<time>500</time>
		<reps>8</reps>
		<groups>
			<group>g1</group>
		</groups>
		<initialTasks>
            <task>
                <name>PlaceRobotInitiallyTask</name>
                <params>
                    <initialPosition>S</initialPosition>
                </params>
            </task>
        </initialTasks>
        <afterCycleTasks>
        </afterCycleTasks>
        <afterTrialTasks>
            <task>
                <name>PolicyValueUpdater</name>
            </task>
        </afterTrialTasks>
        <stopConditions>
            <stopCondition>
                <name>Time</name>
                <params>
                    <time>2000</time>
                </params>
            </stopCondition>
            <stopCondition>
                <name>FoundFood</name>
            </stopCondition>

        </stopConditions>
        <afterCycleLoggers>
            <logger>
                <name>PositionLogger</name>
            </logger>
        </afterCycleLoggers>
        <afterTrialLoggers>
            <logger>
                <name>PolicyDumper</name>
            </logger>
        </afterTrialLoggers>
	</trial>



</experiment>